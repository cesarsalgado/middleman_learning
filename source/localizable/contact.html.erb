---
layout: layout
---

<%= partial(:top_navbar, :locals => { :contact_active => 'active'}) %>

<div id="no-sidenav-container" class="container">

  <section id="contact">
    <div class="page-header">
      <h1><%= I18n.t("contact.contact") %></h1>
    </div>  

    <p class="lead"><%= I18n.t("contact.intro1") %><strong> <%= I18n.t("contact.rule") %></strong> <%= I18n.t("contact.intro2") %>.</p>

    <p><strong><%= I18n.t("contact.rule").capitalize %></strong>: firstname -> cesar, 1 -> s , 2 -> v , 3 -> s</p>

    <form id="generate_email_form" class="form-inline">
      <input type="text" class="input-small" placeholder="firstname">
      <input type="text" class="input-small" placeholder="1">
      <input type="text" class="input-small" placeholder="2">
      <input type="text" class="input-small" placeholder="3">
      <button id="generate_email" type="submit" class="btn" ><%= I18n.t("contact.show_email") %></button>
    </form>

    <div class="lead">
      <span id="generated_succesful_email" class="label label-success"></span>
      <span id="generated_wrong_email" class="label label-important"></span>
    </div>

</div>
